<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Contenedor de la Imagen -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado del Pedido"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fecha y Hora del Pedido"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dirección del Pedido"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDineroPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dinero a Pagar"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="16sp" />

        <!-- Botón para Coger Pedido -->
        <Button
            android:id="@+id/btnCogerPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:text="Coger Pedido"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgFotoRestaurante"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/food_default" />

    <!-- Contenedor de los Detalles -->
</LinearLayout>
